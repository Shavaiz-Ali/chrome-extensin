{
  "name": "chrome-extension-web-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:web": "webpack serve --env target=web",
    "dev:extension": "webpack serve --env target=extension",
    "build:web": "webpack --env target=web",
    "build:extension": "webpack --env target=extension && npm run copy-extension-files",
    "copy-extension-files": "cp public/manifest.json build/ && cp src/extension/background/background.js build/ && cp src/extension/content-scripts/content.js build/",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "chrome-types": "^0.1.316",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-router": "^7.0.2",
    "react-router-dom": "^7.0.2",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.10",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
